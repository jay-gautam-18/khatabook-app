<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>View Hisaab</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://cdn.jsdelivr.net/npm/remixicon/fonts/remixicon.css" rel="stylesheet">
  <script>
    function toggleTheme() {
      const html = document.documentElement;
      if (html.classList.contains('dark')) {
        localStorage.setItem('theme', 'light');
        html.classList.remove('dark');
      } else {
        localStorage.setItem('theme', 'dark');
        html.classList.add('dark');
      }
    }

    document.addEventListener('DOMContentLoaded', () => {
      if (localStorage.getItem('theme') === 'dark') {
        document.documentElement.classList.add('dark');
      }
    });
  </script>
</head>
<body class="bg-gradient-to-r from-gray-100 to-gray-300 dark:from-gray-900 dark:to-gray-800 text-gray-900 dark:text-gray-100 min-h-screen">
  <!-- Navbar -->
  <header class="bg-gradient-to-r from-blue-500 to-purple-500 dark:from-blue-800 dark:to-purple-700 text-white p-4 flex items-center justify-between">
    <div class="flex items-center">
      <h1 class="text-2xl font-bold">Khatabook</h1>
    </div>
    
    <a href="/home"
      onclick="toggleTheme()" 
      class="bg-white text-gray-900 dark:bg-gray-800 dark:text-white py-2 px-4 rounded-lg shadow-md hover:bg-gray-100 dark:hover:bg-gray-700">
      Home
    </a>
    <a href="/create"
      onclick="toggleTheme()" 
      class="bg-white text-gray-900 dark:bg-gray-800 dark:text-white py-2 px-4 rounded-lg shadow-md hover:bg-gray-100 dark:hover:bg-gray-700">
        Create A hisaab
    </a>
  </header>

  <div class="max-w-4xl mx-auto bg-white dark:bg-gray-800 p-6 rounded-lg shadow-md mt-6 relative">
    <h1 class="text-2xl font-bold mb-6">View Hisaab</h1>

    <!-- Created On -->
    <div class="absolute top-4 right-4 text-sm text-gray-700 dark:text-gray-300">
      <h2 class="font-semibold">Created On:</h2>
      <p><%= hisaab.createdAt %></p>

    </div>
    <!-- Encrypted and Shareable Information -->
    <div class="flex mb-4 items-center space-x-2 mt-4">
      <% if(hisaab.encryption === true){ %>
        <span class="bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 text-sm px-2 py-1 rounded">Encrypted</span>
        <i class="ri-eye-off-line text-gray-700 dark:text-gray-300 text-lg"></i>
      <% } else{ %>
        <span class="bg-green-200 dark:bg-green-700 text-gray-700 dark:text-gray-300 text-sm px-2 py-1 rounded">Available</span>
      <% } %>
        
        <% if(hisaab.shareable === true){ %>
        <i class=" text-2xl ri-share-line"></i> <% } %>
      </div>

    <!-- Hisaab Name -->
    <div class="mb-4">
      <h2 class="text-lg font-semibold">Hisaab Name:</h2>
      <p class="text-gray-700 dark:text-gray-300"><%= hisaab.name %></p>
    </div>

    <!-- Hisaab Data -->
    <div class="mb-4">
      <h2 class="text-lg font-semibold">Hisaab Data:</h2>
      <div class="border border-gray-300 dark:border-gray-700 rounded-lg p-4 bg-gray-100 dark:bg-gray-700">
        <p class="text-gray-700 dark:text-gray-300"><%= hisaab.data %></p>
      </div>
    </div>

    <!-- Sharing Link -->
    <div class="absolute top-4 left-4 text-sm text-blue-500 dark:text-blue-400">
      
    </div>

    <%if(mssg){ %>
      <h1 class="text-red-400 text-sm"><%= mssg %></h1>
    <%}%>

    <!-- Buttons -->
    <div class="flex justify-center space-x-4 mt-8">
      <a href="/delete/<%= hisaab._id %>" class="bg-red-500 text-white py-2 px-4 rounded-lg shadow-md hover:bg-red-600">
        Delete Hisaab
      </a>
      <a href="/editcheck/<%= hisaab._id %>" class="bg-blue-500 text-white py-2 px-4 rounded-lg shadow-md hover:bg-blue-600">
        Edit Hisaab
      </a>
    </div>
  </div>
</body>
</html>
